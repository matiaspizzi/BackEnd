<style>
    .table td,
    .table th {
        vertical-align: middle;
    }
</style>

{{#if productos.length}}
<h2>Historial</h2>
    <div class="table-responsive">
        <table class="table table-dark">
            <tr>
                <th>Title</th> 
                <th>price</th> 
                <th>thumbnail</th> 
                <th>id</th>
            </tr>
            {{#each productos}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.price}}</td>
                <td><img width="50" src={{this.thumbnail}} alt="not found"></td>
                <td>{{this.id}}</td>
            </tr>
            {{/each}}
        </table>
    </div>
{{/if}}