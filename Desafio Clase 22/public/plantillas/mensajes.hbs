  {{#if mensajes.lenght}}
    {{#each mensajes}}
      <div class="message-item">
        <span class="author">{{this.autor.email}}</span>
        <span>
          [<span class="date">{{this.fecha}}</span>]:
        </span>
        <span class="message">{{this.texto}}</span>
      </div>
    {{/each}}
  {{/if}}